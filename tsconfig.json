{
  "compilerOptions": {
    /* Type Checking */
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",

    /* Language and Environment */
    "target": "ESNext"
  }
}
